<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hobtimeGreen"
    android:orientation="vertical"
    tools:context="com.hobtimesocialapp.FacebookSignupFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <com.hobtimesocialapp.HobtimeTextView
                android:id="@+id/facebookSignUpFragmentHobtimeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="Hobtime"
                android:textColor="#ffffff"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/fragmentFBSignupSelectCityTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="#F5F5F5"
                android:gravity="center"
                android:padding="10dp"
                android:text="-Select your city-"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/fragmentFBSignupPassET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#F5F5F5"
                android:drawableLeft="@drawable/lock"
                android:gravity="center"
                android:hint="Define a password"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/fragmentFBSignupNextTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/loginBlue"
                android:gravity="center"
                android:padding="20dp"
                android:text="CONTINUE"
                android:textColor="#ffffff"
                android:textSize="15sp" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
