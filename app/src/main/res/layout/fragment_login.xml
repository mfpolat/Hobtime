<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55DF25"
    tools:context="com.com.hobtimesocialapp.app.LandingFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragmentLoginHobtimeTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:text="Hobtime"
                android:textColor="#ffffff"
                android:textSize="60sp" />
            <EditText
                android:id="@+id/loginFragmentMailET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="40dp"
                android:drawableLeft="@drawable/profile"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:hint="E-Mail"
                android:imeOptions="actionNext"
                android:padding="10dp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/loginFragmentPasswordET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:drawableLeft="@drawable/lock"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:hint="Enter your password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textColor="#000000" />


            <TextView
                android:id="@+id/loginFragmentLoginTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/loginBlue"
                android:gravity="center"
                android:padding="15dp"
                android:text="LOG IN"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/loginFragmentFBLoginTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/facebookBlue"
                android:gravity="center"
                android:padding="15dp"

                android:text="FACEBOOK LOGIN"
                android:textColor="#ffffff"
                android:textSize="25sp" />

            <com.facebook.widget.LoginButton xmlns:fb="http://schemas.android.com/apk/res-auto"
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:visibility="gone"
                facebook:confirm_logout="false"
                facebook:fetch_user_info="true" />

            <TextView
                android:id="@+id/loginFragmentForgetPassTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="I forgot my password"
                android:textColor="#ffffff"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/loginFragmentForgetSÄ±gnUpTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="Not a member ? Sign up now"
                android:textColor="#ffffff"
                android:textSize="15sp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
